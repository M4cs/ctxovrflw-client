{
  "id": "ctxovrflw",
  "kind": "memory",
  "uiHints": {
    "daemonUrl": {
      "label": "Daemon URL",
      "placeholder": "http://127.0.0.1:7437",
      "help": "ctxovrflw daemon HTTP endpoint"
    },
    "authToken": {
      "label": "Auth Token",
      "sensitive": true,
      "placeholder": "from ~/.ctxovrflw/config.toml",
      "help": "Bearer token for daemon API (auth_token in config.toml)"
    },
    "autoCapture": {
      "label": "Auto-Capture",
      "help": "Automatically store important user messages as memories"
    },
    "autoRecall": {
      "label": "Auto-Recall",
      "help": "Automatically inject relevant memories into agent context"
    },
    "agentId": {
      "label": "Agent ID",
      "placeholder": "openclaw",
      "help": "Identifier for this agent (stored with memories for attribution)"
    },
    "captureMaxChars": {
      "label": "Capture Max Chars",
      "help": "Maximum message length eligible for auto-capture",
      "advanced": true,
      "placeholder": "500"
    },
    "recallLimit": {
      "label": "Recall Limit",
      "help": "Maximum memories to inject via auto-recall",
      "advanced": true,
      "placeholder": "5"
    },
    "recallMinScore": {
      "label": "Recall Min Score",
      "help": "Minimum similarity score for auto-recall (0.0-1.0)",
      "advanced": true,
      "placeholder": "0.3"
    }
  },
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "daemonUrl": {
        "type": "string",
        "default": "http://127.0.0.1:7437"
      },
      "authToken": {
        "type": "string"
      },
      "autoCapture": {
        "type": "boolean",
        "default": false
      },
      "autoRecall": {
        "type": "boolean",
        "default": true
      },
      "agentId": {
        "type": "string",
        "default": "openclaw"
      },
      "captureMaxChars": {
        "type": "number",
        "minimum": 50,
        "maximum": 10000,
        "default": 500
      },
      "recallLimit": {
        "type": "number",
        "minimum": 1,
        "maximum": 50,
        "default": 5
      },
      "recallMinScore": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "default": 0.3
      }
    },
    "required": ["authToken"]
  }
}
